FROM python:3.12-slim

WORKDIR /app

RUN pip install --no-cache-dir "litellm[proxy]" hypercorn

COPY deploy/dokploy/litellm.config.yaml /app/deploy/dokploy/litellm.config.yaml

EXPOSE 4000

CMD ["litellm", "--host", "0.0.0.0", "--port", "4000", "--config", "/app/deploy/dokploy/litellm.config.yaml", "--run_hypercorn", "--drop_params"]
